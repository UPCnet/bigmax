<!doctype html>
<html metal:use-macro="api.masterTemplate.macros['master']">
<head>

</head>
<body>
  <metal:main fill-slot="main">



  <div class="container">
    <div class="row">
       <div class=".col-md-12">
          <h1>User administration</h1>
          <ul class="nav nav-tabs">
            <li class="active"><a href="#users" data-toggle="tab">Users</a></li>
            <li><a href="#roles" data-toggle="tab">Roles</a></li>
          </ul>


          <div class="tab-content">
              <div class="tab-pane active row" id="users">
              </div>

              <div class="tab-pane" id="roles">
                <div class="container">
                  <div class="row">
                    <div class="col-md-12">

                        <table class="table" id="user-roles" data-url="${api.context_url}/api-role">
                            <thead>
                              <tr>
                                <th></th>
                                <th tal:repeat="role roles" tal:content="role"></th>
                              </tr>
                            </thead>
                            <tr tal:repeat="user users"
                                tal:attributes="data-username user.username">
                              <td tal:content="user.username"></td>
                              <td tal:repeat="role user.roles" >
                                  <input type="checkbox"
                                         class="user-role"
                                         tal:attributes="checked role.checked|nothing;
                                                         data-role role.name">
                              </td>
                            </tr>
                          </table>

                    </div>
                  </div>

                  <div class="row">
                    <div class="form-group col-xs-4">
                      <input type="text" class="form-control" id="searchusers" placeholder="Search Users" data-url="${api.context_url}/api-users">
                    </div>
                  </div>

                </div>
              </div>
          </div>

       </div>
    </div>
  </div>



  </metal:main>

  <metal:main fill-slot="javascript">
    <script src="${api.application_url}/js/user.js"></script>
  </metal:main>
</body>
</html>
